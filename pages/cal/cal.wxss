.content{
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
	background-repeat: repeat;
	padding: 30rpx;
	position: relative;

}
.symbol{
	position: absolute;
	left: 40rpx;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 16pt;
}
.content .screen{
	text-align: right;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	box-sizing: border-box;
	padding: 0 10rpx 0 30rpx;
	white-space: nowrap;
	margin: 0 auto 15rpx auto;
	overflow: hidden;
	border:1px solid #ccc;
	background-color: #f5f5f5;
}
.btn-group{
	display: flex;
	flex-direction: row;
	padding: 0 30rpx;
}
.item{
	width: 160rpx;
	height: 150rpx;
	margin : 10rpx;
	text-shadow: 0 1px 1px rgb(0,0,0.3);
	line-height: 150rpx;
}
.item.dark{
	background-color: #ccc;
}