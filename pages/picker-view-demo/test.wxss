/* pages/my-order/order-detail.wxss */
@import "my-order-detail.wxss";

/* 订单详情头部 */
.order-top{
    background: #fff8d8;
    padding: 17rpx 24rpx 16rpx;
    margin-bottom: 24rpx;
}
.order-top .tit{
    color: #282828;
    font-size: 28rpx;
}
.order-top .success{
    font-size: 28rpx;
    line-height: 86rpx;
    display: block;
    text-align: center;
    vertical-align: top;
}
.order-top .success::before{
    font-family: icon-font;
    content: "\E92B";
    font-size: 64rpx;
    line-height: 86rpx;
    color: #1ad96e;
    vertical-align: top;
    padding-right: 14rpx;
    display: inline-block;
    height: 86rpx;
}
.order-top .info{
    color: #666;
    font-size: 24rpx;
    word-break: break-all;
}
/* 订单详情头部end */
/* 地址 */
.address{
    font-size: 24rpx;
    color: #282828;
    padding: 26rpx 24rpx 26rpx 100rpx;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content:center;
    word-break: break-all;
    margin-bottom: 24rpx;
}
.address::before{
    font-family: 'icon-font';
    font-size: 42rpx;
    content: '\e90d';
    color: #050c1f;
    position: absolute;
    left: 24rpx;
}
.address::after{   
    position: absolute;
    left: 80rpx;
    content: '';
    background: #e0e0e0;
    width: 1rpx;
    transform: scaleX(.5);
    top: 24rpx;
    bottom: 24rpx;
}
.address .name{
    margin-bottom: 8rpx;
   
}
/* 地址end */
/* 订单列表 */
.order-list .sub .line .contact{
    font-size: 24rpx;
    color: #3976ba;
    position: absolute;
    right: 24rpx;
    top: 0;
}
.order-list .sub .line .contact::before{
    font-family: '\icon-font';
    content: '\e929';
    font-size: 32rpx;
    display: inline-block;
    vertical-align: top;
    margin-right: 8rpx;
    margin-top: -2rpx;
}
.order-list .sub .msg{
    font-size: 26rpx;
    color: #282828;
    padding: 24rpx 26rpx;
    word-break: break-all;

}
.order-detail .sub .info{
    background: #fff;
    padding-top: 26rpx;
    padding-bottom: 28rpx;
    margin-bottom: 0;
    position: relative;
}
.order-detail .sub .info::after{
    position: absolute;
    content: '';
    bottom: 0;
    background: #e0e0e0;
    height: 1rpx;
    left: 24rpx;
    right: 24rpx;
    transform: scaleY(.5);
}
/* 订单列表end */
/* 价格详情 */
.price-list{
    background: #fff;
    margin-bottom: 24rpx;
}
.price-list view{
    font-size: 28rpx;
    color: #999;
    height: 94rpx;
    line-height: 94rpx;
    position: relative;
    padding: 0 24rpx;
}
.price-list view::after{
    position: absolute;
    content: '';
    background: #e0e0e0;
    height: 1rpx;
    left: 24rpx;
    right: 24rpx;
    bottom: 0;
    transform: scaleY(.5);
}
.price-list view:last-of-type::after{
    height: 0;
}
.price-list view text{

}
.price-list view.total-price{
    color: #282828;
}
.price-list .price{
    position: absolute;
    right: 24rpx;
}

/* 价格详情end */
.order-time{
    font-size: 24rpx;
    color: #666666;
    padding: 20rpx 24rpx;
    background: #fff;
    position: relative;
    margin-bottom: 24rpx;
}
.order-time view{
    margin: 4rpx 0;
}
.order-time button{
    font-size: 24rpx;
    color: #282828;
    text-align: center;
    border-radius: 6rpx;
    border: 1px solid #e0e0e0;
    padding: 0 20rpx;
    height: 48rpx;
    line-height: 48rpx;
    position: absolute;
    right: 24rpx;
    top: 24rpx;
    box-sizing: border-box;
}
.tit-flower{
    
}
.tit-flower view {
    display: inline-block;
    position: relative;
    font-size: 30rpx;
}

.tit-flower view:before {
    color: #c5b7ab;
    position: absolute;
    content: "\E91D";
    font-family: icon-font;
    font-size: 76rpx;
    line-height: 0;
    top: 30rpx; 
    left: -86rpx;
}

.tit-flower view:after {
    color: #c5b7ab;
    position: absolute;
    content: "\E91D";
    font-family: icon-font;
    font-size: 76rpx;
    line-height: 0;
    bottom: 30rpx;
    right: -86rpx;
    transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
}

.order-detail .info .price{
    top: 26rpx;
}